<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/bg_header_img"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/header_left"
                android:layout_width="@dimen/header_button_width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/normal_space"
                android:paddingRight="@dimen/normal_space" />

            <FrameLayout
                android:id="@+id/header_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <FrameLayout
                android:id="@+id/header_right"
                android:layout_width="@dimen/header_button_width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/normal_space"
                android:paddingRight="@dimen/normal_space" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expand_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/bg_header_img_bottom"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

    </LinearLayout>

    <com.hayukleung.app.view.refresh.SmoothProgressBar
        android:id="@+id/header_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
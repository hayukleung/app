<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_normal"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_marginRight="@dimen/space_normal"
                android:layout_marginBottom="@dimen/space_normal"
                android:layout_marginTop="@dimen/space_large"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:text="" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="#f2f2f2" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:divider="@drawable/divider"
            app:showDividers="middle">

            <com.hayukleung.app.view.widget.AutoScaleTextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="否"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:paddingLeft="@dimen/space_normal"
                android:paddingRight="@dimen/space_normal"
                android:paddingTop="@dimen/space_large"
                android:paddingBottom="@dimen/space_large"
                android:background="@drawable/bg_dialog_btn_bottom_left" />

            <com.hayukleung.app.view.widget.AutoScaleTextView
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="是"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:paddingLeft="@dimen/space_normal"
                android:paddingRight="@dimen/space_normal"
                android:paddingTop="@dimen/space_large"
                android:paddingBottom="@dimen/space_large"
                android:background="@drawable/bg_dialog_btn_bottom_right" />
        </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>
</RelativeLayout>
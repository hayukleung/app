<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/xp5.0">

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/xp5.0"
        android:max="15"
        android:maxHeight="@dimen/xp2.0"
        android:minHeight="@dimen/xp2.0"
        android:progressDrawable="@drawable/bg_paint_pad_progress"
        android:thumb="@drawable/bg_paint_pad_thumb"
        android:thumbOffset="0dp"/>

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"/>
    </android.support.v7.widget.ButtonBarLayout>
</LinearLayout>
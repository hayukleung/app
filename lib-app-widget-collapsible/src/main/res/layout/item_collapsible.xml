<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ItemCollapsible$rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tree_org_off"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/ItemCollapsible$img_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/app_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/ItemCollapsible$txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/ItemCollapsible$img_toggle"
        android:layout_toEndOf="@id/ItemCollapsible$img_toggle"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>
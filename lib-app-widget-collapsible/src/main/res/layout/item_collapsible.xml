<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ItemCollapsible$rl_item"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_tree_org">

    <ImageView
        android:id="@+id/ItemCollapsible$img_toggle"
        android:layout_width="@dimen/xp10.0"
        android:layout_height="@dimen/xp10.0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/xp2.0"
        android:layout_marginRight="@dimen/xp2.0"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/ItemCollapsible$txt_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/xp12.0"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ItemCollapsible$img_toggle"
        android:layout_toRightOf="@id/ItemCollapsible$img_toggle"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:textStyle="bold"/>

</RelativeLayout>